@model IEnumerable<CourseApp304.Models.Request>
@{
    ViewData["Title"] = "List";
}

<div class="m-5">
    <div style="font-size:30px;" class="bg-danger text-white p-4">
        Request List
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="bg-success text-white">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Message</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Message</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="addRequest" class="btn btn-success">Create a Request</a>
    </div>
</div>